<div class="col-md-4"></div>
<div class="col-md-4 panel well">
    {{#if loginError.message}}
        <div class="alert alert-warning alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            {{loginError.message}}
        </div>
    {{/if}}
    <form action="/Admin/LoginStaff" method="post">
        <div class="form-group">
            <label>Username:</label>
            <input type="text" name="username" value="Admin" class="form-control"/>
        </div>
        <div class="form-group">
            <label>Password:</label>
            <input type="password" name="password" class="form-control"/>
        </div>

        <div class="form-group">
                <input type="submit" value="Login" class="form-control" formaction="/login" formmethod="post">
        </div>
    </form>
</div>
